{
  "name": "quran-corpus-visualizer",
  "version": "0.5.0",
  "description": "Interactive exploration of Quranic linguistic structure and morphology through dynamic visualizations",
  "license": "GPL-3.0",
  "private": false,
  "homepage": "https://quran.pluragate.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/lAvArt/Quran-corpus-visualizer.git"
  },
  "bugs": {
    "url": "https://github.com/lAvArt/Quran-corpus-visualizer/issues"
  },
  "author": {
    "name": "lAvArt",
    "url": "https://github.com/lAvArt"
  },
  "keywords": [
    "quran",
    "corpus",
    "visualization",
    "arabic",
    "linguistics",
    "morphology",
    "d3",
    "nextjs",
    "interactive",
    "graph"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:search-validation": "vitest run lib/search/arabicNormalize.test.ts lib/search/queryParser.test.ts lib/search/indexes.test.ts lib/search/searchValidation.test.ts lib/search/collocation.test.ts",
    "eval:search": "tsx scripts/eval-search.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "i18n:check": "node scripts/check-i18n.js",
    "i18n:pseudo": "node scripts/pseudo-localize.js",
    "fetch:morphology": "node scripts/fetch-morphology.js",
    "docs:generate": "concurrently -k -s first \"npm run dev\" \"wait-on http://127.0.0.1:3000 && npx tsx scripts/generate-docs.ts\""
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "@use-gesture/react": "^10.3.1",
    "@vercel/analytics": "^1.6.1",
    "d3": "^7.9.0",
    "framer-motion": "^12.33.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.12.0",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "concurrently": "^9.2.1",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "start-server-and-test": "^2.1.3",
    "tsx": "^4.21.0",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
